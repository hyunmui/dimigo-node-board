{% extends "../template.html.njk" %}

{% block content %}
    <h1 class="mb-3">글쓰기</h1>
    <form class="form" method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <input type="hidden" name="id" value="{{ post.id }}">

        <div class="form-group">
            <label for="postTitle">제목</label>
            <input type="text" name="title" id="postTitle" class="form-control" required="required" value="{{ post.title }}">
        </div>
        <div class="form-group">
            <label for="postContent">내용</label>
            <textarea name="content" id="postContent" class="form-control" rows="5" required="required">{{ post.content }}</textarea>
        </div>

        <div class="my-3">
            <button class="btn btn-success">저장</button>
        </div>
    </form>
{% endblock %}